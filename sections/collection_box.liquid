<div class="collection_box-main">
  {% for block in section.blocks %}
  <div class="collection_box">
    <div class="collection_box-img">
      {% if  block.settings.img_main_link != blank or block.settings.img_main != blank %}
      <a href="{{ block.settings.img_main_link }}"><img class="des_view" src="{{ block.settings.img_main | img_url: 'master' }}">
        <div class="about-us-content">
          <p>{{ block.settings.text_contant_1 }}</p>
          <h4>{{ block.settings.text_contant_2 }}</h4>
          <div class="btn_shop">
            {% if  block.settings.text_contant_3_link != blank or block.settings.text_contant_3 != blank %}
            <a href="{{ block.settings.text_contant_3_link }}">{{ block.settings.text_contant_3 }}</a>
            {% endif %}
          </div>
        </div>
      </a>                     
      {% endif %}
    </div>
  </div>
  {% endfor %}
</div>


