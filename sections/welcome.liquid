<div class="welcome_section_wr">
  <div class="welcome_section">
    <div class="welcome_img_section">
      {% if section.settings.img_main != blank %}
    	  <img src="{{ section.settings.img_main | img_url: 'master' }}" alt="img">
      {% endif %}
    </div>
    <div class="welcome_content_section">
      <h2>{{ section.settings.heading }}</h2>
      <h3>{{ section.settings.sub_heading }}</h3>
      <p>{{ section.settings.content_box }}</p>
      
      
      {% include 'section_mailchimp_signup'%}
      
      
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "welcome",
    "settings": [
     { 
      "type": "text",
      "id": "heading",
      "label": "Heading"
     },
     { 
      "type": "image_picker",
      "id": "img_main",
      "label": "image"
     },
     { 
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading"
     },
     { 
      "type": "html",
      "id": "content_box",
      "label": "paragraph"
     }
    ]
  }
{% endschema %}

