<div class="icrb_wr">
  <div class="icrb_section">
    <div class="icrb__story">
      <h2>{{ section.settings.heading }}</h2>
      <h3>{{ section.settings.sub_heading }}</h3>
      <p>{{ section.settings.content_box }}</p>

      {% include 'section_mailchimp_signup'%}
      <div class="icrb_img_story">
        {% if section.settings.img_main != blank %}
        <img src="{{ section.settings.img_main | img_url: 'master' }}" alt="img">
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Icrb Section",
    "settings": [
     { 
      "type": "text",
      "id": "heading",
      "label": "Heading"
     },
     { 
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading"
     },
     { 
      "type": "html",
      "id": "content_box",
      "label": "paragraph"
     },   
     { 
      "type": "image_picker",
      "id": "img_main",
      "label": "Image"
     }
    ]
  }
{% endschema %}

